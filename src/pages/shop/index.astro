---

<Layout title="Shop Quilts" description="Browse our collection of handcrafted quilts" currentPage="/shop">
  <main class="shop-content">
    <header class="shop-header">
      <h1>Shop Our Collection</h1>
      <p>Discover our handcrafted quilts made with care and attention to detail</p>
    </header>

    <div class="filters">
      <select id="sort-by" class="filter-select">
        <option value="featured">Featured</option>
        <option value="price-low">Price: Low to High</option>
        <option value="price-high">Price: High to Low</option>
        <option value="newest">Newest</option>
      </select>
    </div>

    <div class="product-grid">
      {products.map((product) => (
        <ProductCard {...product} />
      ))}
    </div>
  </main>
</Layout>

<style>
  .shop-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .shop-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--accent-dark);
  }

  .shop-header p {
    font-size: 1.2rem;
    color: #666;
  }

  .filters {
    margin-bottom: 2rem;
    display: flex;
    justify-content: flex-end;
  }

  .filter-select {
    padding: 0.5rem 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    background-color: white;
    cursor: pointer;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .shop-content {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .product-grid {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 1rem;
    }
  }
</style>

<script>
  const sortSelect = document.getElementById('sort-by');
  sortSelect?.addEventListener('change', (e) => {
    const target = e.target as HTMLSelectElement;
    // Here you would typically handle the sorting
    console.log('Sort by:', target.value);
  });
</script>